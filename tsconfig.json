{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@images/*": ["src/assets/images/*"]
    }
  }
}
